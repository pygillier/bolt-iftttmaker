{
    "name": "pygilllier/iftttmaker",
    "description": "Add IFTTT maker channel access to Bolt.",
    "type": "bolt-extension",
    "keywords" : [ "ifttt", "maker", "channel" ],
    "require": {
        "bolt/bolt": ">=2.2.10,<3.0.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Pierre-Yves Gillier", 
            "email": "hello@pygillier.me"
        }
    ],
	"minimum-stability" : "dev",
	"prefer-stable" : true,
    "autoload": {
        "files": [
            "init.php"
        ],
        "psr-4": {
            "Bolt\\Extension\\pygillier\\IftttMaker\\": "src",
            "Bolt\\Extension\\pygillier\\IftttMaker\\Tests\\": "tests"
        }
    },
    
    "extra": {
        "bolt-assets": "assets"
    }
}
